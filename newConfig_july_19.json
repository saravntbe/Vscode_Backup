{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "An Old Hope Italic",
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "editor.fontFamily": "'Dank Mono','Operator Mono Lig','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback', 'Noto Color Emoji'",
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.copyWithSyntaxHighlighting": false,
  "zenMode.centerLayout": false,
  "terminal.integrated.fontSize": 16,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.rulers": [80, 120],
  "javascript.validate.enable": false,
  "editor.formatOnSave": true,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "workbench.colorCustomizations": {
    // "list.focusBackground": "#B877DB",
    // "list.inactiveSelectionBackground": "#F09483",
    // "list.inactiveFocusBackground": "#1E2028",
    // "sideBar.background": "#ff0000",
  },
  // turn it off for JS
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[css]": {
    "editor.formatOnSave": false
  },
  "[scss]": {
    "editor.formatOnSave": false
  },
  "eslint.autoFixOnSave": true,
  "editor.renderWhitespace": "all",
  "workbench.panel.defaultLocation": "right",
  "workbench.sideBar.location": "right",
  "breadcrumbs.enabled": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "peacock.affectActivityBar": false,
  "peacock.affectStatusBar": false,
  "peacock.favoriteColors": [
